<?xml version="1.0" encoding="UTF-8"?>
<!-- JamesDSPManager-RE - Modern Material Design 3 Themes -->
<resources xmlns:android="http://schemas.android.com/apk/res/android">

  <!-- ============================================= -->
  <!-- Base Material Design 3 Theme (Dark) -->
  <!-- ============================================= -->
  
  <style name="AppTheme" parent="@android:style/Theme.Material">
    <!-- Primary Colors -->
    <item name="android:colorPrimary">@color/md_theme_primary</item>
    <item name="android:colorPrimaryDark">@color/md_theme_on_primary_container</item>
    <item name="android:colorAccent">@color/audio_waveform</item>
    
    <!-- Surface & Background -->
    <item name="android:windowBackground">@color/md_theme_background</item>
    <item name="android:colorBackground">@color/md_theme_background</item>
    <item name="android:colorSurface">@color/md_theme_surface</item>
    
    <!-- Text Colors -->
    <item name="android:textColorPrimary">@color/md_theme_on_surface</item>
    <item name="android:textColorSecondary">@color/md_theme_on_surface_variant</item>
    
    <!-- Navigation Bar -->
    <item name="android:navigationBarColor">@color/md_theme_surface</item>
    <item name="android:statusBarColor">@android:color/transparent</item>
    <item name="android:windowLightStatusBar">false</item>
    
    <!-- Drawer Arrow -->
    <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
  </style>

  <!-- ============================================= -->
  <!-- Audio Visualizer Theme (Enhanced Dark) -->
  <!-- ============================================= -->
  
  <style name="AppThemeAudioViz" parent="AppTheme">
    <item name="android:colorPrimary">@color/gradient_start</item>
    <item name="android:colorPrimaryDark">@color/gradient_end</item>
    <item name="android:colorAccent">@color/audio_active</item>
    <item name="android:navigationBarColor">@color/md_theme_surface</item>
  </style>

  <!-- ============================================= -->
  <!-- Red/Green Complementary Theme -->
  <!-- ============================================= -->
  
  <style name="AppThemeRed" parent="@android:style/Theme.Material">
    <item name="android:windowBackground">@color/backgroundred</item>
    <item name="android:itemBackground">@color/backgroundred</item>
    <item name="android:textColorAlertDialogListItem">@color/primaryred</item>
    <item name="android:colorPrimary">@color/primaryred</item>
    <item name="android:colorPrimaryDark">@color/primaryred_dark</item>
    <item name="android:colorAccent">@color/accentred</item>
    <item name="android:navigationBarColor">@color/primaryred_dark</item>
    <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
  </style>

  <!-- ============================================= -->
  <!-- Idea Theme (Warm Palette) -->
  <!-- ============================================= -->
  
  <style name="AppThemeIdea" parent="@android:style/Theme.Material">
    <item name="android:windowBackground">@color/backgroundidea</item>
    <item name="android:itemBackground">@color/backgroundidea</item>
    <item name="android:textColorAlertDialogListItem">@color/primaryidea</item>
    <item name="android:colorPrimary">@color/primaryidea</item>
    <item name="android:colorPrimaryDark">@color/primaryidea_dark</item>
    <item name="android:colorAccent">@color/accentidea</item>
    <item name="android:navigationBarColor">@color/primaryidea_dark</item>
    <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
  </style>

  <!-- ============================================= -->
  <!-- Light Theme (Material Design 3) -->
  <!-- ============================================= -->
  
  <style name="AppThemeLight" parent="@android:style/Theme.Material.Light">
    <!-- Primary Colors -->
    <item name="android:colorPrimary">@color/md_theme_primary</item>
    <item name="android:colorPrimaryDark">@color/md_theme_on_primary_container</item>
    <item name="android:colorAccent">@color/audio_waveform</item>
    
    <!-- Surface & Background -->
    <item name="android:windowBackground">#FFFBFE</item>
    <item name="android:colorBackground">#FFFBFE</item>
    <item name="android:colorSurface">#FFFBFE</item>
    
    <!-- Text Colors -->
    <item name="android:textColorPrimary">#1C1B1F</item>
    <item name="android:textColorSecondary">@color/md_theme_on_surface_variant</item>
    
    <!-- Navigation Bar -->
    <item name="android:navigationBarColor">#FFFBFE</item>
    <item name="android:statusBarColor">@android:color/transparent</item>
    <item name="android:windowLightStatusBar">true</item>
    
    <!-- Drawer Arrow -->
    <item name="drawerArrowStyle">@style/DrawerArrowStyleLight</item>
  </style>

  <!-- ============================================= -->
  <!-- Widget Styles -->
  <!-- ============================================= -->
  
  <!-- Drawer Arrow (Dark Themes) -->
  <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
    <item name="spinBars">true</item>
    <item name="color">@android:color/white</item>
  </style>
  
  <!-- Drawer Arrow (Light Theme) -->
  <style name="DrawerArrowStyleLight" parent="@style/Widget.AppCompat.DrawerArrowToggle">
    <item name="spinBars">true</item>
    <item name="color">#1C1B1F</item>
  </style>

  <!-- ============================================= -->
  <!-- Effect Card Style (NEW) -->
  <!-- ============================================= -->
  
  <style name="EffectCardStyle">
    <item name="android:layout_marginStart">16dp</item>
    <item name="android:layout_marginEnd">16dp</item>
    <item name="android:layout_marginTop">8dp</item>
    <item name="android:layout_marginBottom">8dp</item>
    <item name="android:background">@color/md_theme_surface_variant</item>
    <item name="android:elevation">2dp</item>
  </style>

  <!-- ============================================= -->
  <!-- Text Appearance Styles (MD3 Typography) -->
  <!-- ============================================= -->
  
  <!-- Display - Large headings -->
  <style name="TextAppearance.App.DisplayLarge" parent="@android:style/TextAppearance.Material">
    <item name="android:textSize">57sp</item>
    <item name="android:fontFamily">sans-serif-medium</item>
    <item name="android:textColor">@color/md_theme_on_surface</item>
  </style>
  
  <!-- Headline - Section headers -->
  <style name="TextAppearance.App.HeadlineMedium" parent="@android:style/TextAppearance.Material">
    <item name="android:textSize">28sp</item>
    <item name="android:fontFamily">sans-serif</item>
    <item name="android:textColor">@color/md_theme_on_surface</item>
  </style>
  
  <!-- Title - Card titles, effect names -->
  <style name="TextAppearance.App.TitleMedium" parent="@android:style/TextAppearance.Material">
    <item name="android:textSize">16sp</item>
    <item name="android:fontFamily">sans-serif-medium</item>
    <item name="android:textColor">@color/md_theme_on_surface</item>
    <item name="android:letterSpacing">0.15</item>
  </style>
  
  <!-- Body - Main content text -->
  <style name="TextAppearance.App.BodyMedium" parent="@android:style/TextAppearance.Material">
    <item name="android:textSize">14sp</item>
    <item name="android:fontFamily">sans-serif</item>
    <item name="android:textColor">@color/md_theme_on_surface_variant</item>
    <item name="android:lineSpacingExtra">4dp</item>
  </style>
  
  <!-- Label - Buttons, small labels -->
  <style name="TextAppearance.App.LabelMedium" parent="@android:style/TextAppearance.Material">
    <item name="android:textSize">12sp</item>
    <item name="android:fontFamily">sans-serif-medium</item>
    <item name="android:textColor">@color/md_theme_on_surface_variant</item>
    <item name="android:letterSpacing">0.5</item>
    <item name="android:textAllCaps">true</item>
  </style>

  <!-- ============================================= -->
  <!-- Dialog Styles (Modern) -->
  <!-- ============================================= -->
  
  <style name="DialogTheme" parent="@android:style/Theme.Material.Dialog">
    <item name="android:colorPrimary">@color/md_theme_primary</item>
    <item name="android:colorAccent">@color/audio_waveform</item>
    <item name="android:windowBackground">@color/md_theme_surface</item>
  </style>

</resources>